/* pages/merchant/merchant.wxss */
.merchant__list {
  height: 100%;
  background: #f6f6f6;
}

.merchant {
  position: relative;
  padding: 20rpx 0;
  display: flex;
  align-items: center;
  background: #fff;
}

.merchant .content__left .left__title {
  padding-left: 30rpx;
  padding-bottom: 6rpx; 
  font-size: 29rpx;
  font-weight: 600;
}

.merchant .content__left .left__address {
  padding-left: 30rpx;
  font-size: 24rpx;
  color: #999;
}

.content__right {
  padding: 0 30rpx;
  border-left: 1rpx solid #eee;
}

.content__right image {
  width: 60rpx;
  height: 60rpx;
}
